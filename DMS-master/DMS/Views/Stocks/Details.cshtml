@model DMS.Models.Stock

@{
    ViewData["Title"] = "Details";
}

<h2>Stock Details</h2>

<div>
    <h4>Stock</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ManufacturingDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ManufacturingDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StockInDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StockInDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deliveries)
        </dt>
        
            <dd class="col-sm-10">
                <table class="table">
                    <tr>
                        <th>Quantity</th>
                        <th>Shop Name</th>
                    </tr>

                     @foreach (var item in Model.Deliveries)
                    {
                        <tr>
                            <td>
                              @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Shops.Name)
                            </td>
                        </tr>
                    }
                      
                </table>
            </dd>
            
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.StockID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
